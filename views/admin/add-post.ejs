<%- include('../includes/header.ejs') %>

<div class="site-section">
  <div class="container">
      <div class="row">
      <div class="col-lg-3">
            <div class="card text-black" style="width: 18rem;">
                <div class="card-header">
                    Dashboard
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="#">Add Blog Post</a></li>
                    <li class="list-group-item"><a href="#">View all Blog Post</a></li>
                </ul>
            </div>
       </div>
       <div class="col-lg-9">
        <div>
       
        </div>
            <form action="add-post" method="post">

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Name of Author</label>
                        <input type="text" name="author" class="form-control" id="exampleFormControlInput1" placeholder="Full Name of Author">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Title of Post</label>
                        <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Title of Post ">
                    </div>
                    <div class="form-group" >
                        <label for="exampleFormControlTextarea1">Main Content of Post</label>
                        <textarea  class="form-control" id='content' name="content" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Image Url</label>
                        <input type="text" name="imageUrl" class="form-control" id="exampleFormControlInput1" placeholder="Image Url ">
                       
                    </div>
                   
                    <div class = "form-group">
                    <button name="save" class="form-control btn-success">Save</button>

                    </div>
                </form>

       </div>
    </div> 
  </div>
</div>


<%- include('../includes/footer.ejs') %>


<script src="/ckeditor/ckeditor.js"></script>

<script>
    CKEDITOR.replace('content');
</script>